{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "8.0.0-pre",
  "homepage_url": "https://github.com/jperryhouts/send-later/",
  "icons": {
    "48": "icons/icon.png"
  },
  "applications": {
      "gecko": {
          "id": "sendlater@inverted.earth",
          "strict_min_version": "74.0b1"
      }
  },
  "permissions": [
    "storage",
    "accountsRead",
    "accountsFolders",
    "menus",
    "menus.overrideContext",
    "activeTab",
    "messagesMove",
    "messagesRead",
    "compose"
  ],

  "background": {
    "scripts": ["/utils/util.js","/options/migratePrefs.js","/background.js"]
  },

  "options_ui": {
    "page": "/options/options.html",
    "open_in_tab": false,
    "browser_style": false
  },

  "commands": {
    "do-send-later": {
      "suggested_key": {
        "default": "Alt+Shift+S"
      },
      "description": "Execute the Send Later plugin"
    }
  },

  "compose_action": {
    "browser_style": true,
    "default_area": "maintoolbar",
    "default_icon": "/icons/icon.png",
    "default_popup": "/dialogs/popup.html",
    "default_title": "SendLater"
  },

  "default_locale": "en",

  "experiment_apis": {
    "legacyPrefs": {
      "schema": "experiments/legacyPrefs.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["legacyPrefs"]],
        "script": "experiments/legacyPrefs.js"
      }
    },
    "sendLater": {
      "schema": "experiments/sendLater.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["sendLater"]],
        "script": "experiments/sendLater.js"
      }
    }
  }
}
